<script>
    function mini_challenge() {

        swal({
                text: 'What was the password you got after changing the paragraph to "cat"?',
                content: "input",
                button: {
                    text: "Submit",
                    closeModal: true,
                },
            })
            .then(name => {
                if (DOMPurify.sanitize(name).toUpperCase() == "QWERTY") {
                    swal("Nice!", "That's correct, well done", "success", {
                        button: "Next",
                    });
                } else {
                    swal("Not quite!", "Make sure you're editing the right text, it should be the paragraph inside the challenge box", "error", {
                        button: "Return"
                    });
                }
            })


    }

</script>





