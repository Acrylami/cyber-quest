        <!-- MINI CHALLENGE (Args: Text, hint) -->
        {% call mini_challenge("Edit this line to say only 'cat' and you'll get a password to enter below", "Right click the above text, select inspect element, then double click the &lt;p&gt; element and type the word 'cat'. Watch the demonstration clip above to show you how.") %}
        {% endcall %}
